<p id="notice"><%= notice %></p>
<style type="text/css">
td
{
    padding:0 15px 0 15px;
}
</style>
<center>
<h1>Say "Hello" to our Pets!</h1>
</center>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
            <td><%= pet.name %></td>
            <td><%= pet.age %></td>
            <td><%= pet.breed %></td>
            <td><%= pet.owner.name %></td>
            <td><%= link_to 'Show', pet, class: "btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-default" %></td>
            <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
