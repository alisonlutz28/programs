<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Courses</h3>
  </div>
  <div class="panel-body">
    <div>
      <d1 class="dl-horizontal">
        <dt>Last Name</dt>
        <dd><%= @student.last_name %></dd>
        <dt>First Name</dt>
        <dd><%= @student.first_name %></dd>
        <dt>Enrollment Date</dd>
        <dd><%= @student.enrollment_date %></dd>
        <dt>Enrollments</dt>
        <dd>
          <table class="table">
            
            <thead>
              <tr class="row">
                <th>Course Title</th>
                <th>Grade</th>
              </tr>
            </thead>
            
            <tbody>
              <% @enrollments.each do |enrollment| %>
              <tr class="row">
                <td><%= enrollment.course.title %></td>
                <td><%= enrollment.grade %></td>
              </tr>
              <% end %>
            </tbody>

          </table>
        </dd>
      </d1>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to 'Edit', edit_student_path(@student), :class => "btn-primary btn-sm" %>
    <%= link_to 'Back', students_path, :class => "btn-primary btn-sm" %>
  </div>
</div>