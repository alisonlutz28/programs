<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
	<div class="panel-heading">
		<%= @blog_post.title %>
	</div>
	<div class="panel panel-body">
		<p>by <%= @blog_post.author %></p>
		<p><%= @blog_post.blog_entry %></p>
		<br>
		<center>
			<%= link_to 'Edit Post', edit_blog_post_path(@blog_post), class: "btn btn-warning" %> |
			<%= link_to 'Back to Index', blog_posts_path, class: "btn btn-primary" %>
		</center>
	</div>
</div>


<div class="panel panel-success">
	<div class="panel-heading">
		Make a Comment
	</div>
	<div class="panel-body">
		<%= render 'comments/form' %>
	</div>
</div>


<div class="panel panel-default">
	<div class="panel-header">
		<h4>Comments</h4>
		<% @blog_post.comments.each do|comment| %>
		<div class="panel-body"></div>
		<p><strong><%= comment.author %> </strong> said:</p>
		<p><%= comment.comment_entry %> </p>
	</div>
	<% end %>
</div>