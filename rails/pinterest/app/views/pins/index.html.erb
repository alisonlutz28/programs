<p id="notice"><%= notice %></p>

<div class="container">
<div class="jumbotron">
  <center>
    <h1>Pins</h1>
  </center>
</div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Board</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.name %></td>
        <td><%= pin.image %></td>
        <td><%= pin.board.name %></td>
        <td><%= pin.user_id %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Delete All Pins', Pin, method: :delete, data: {confirm: 'Are you sure you want to delete all your pins?'} %>
